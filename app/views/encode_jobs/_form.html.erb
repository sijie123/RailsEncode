<%= form_for(@encode_job) do |f| %>
  
  <div class="col-md-8 col-md-offset-2">
    
    <% if encode_job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(encode_job.errors.count, "error") %> prohibited this encode_job from being saved:</h2>

      <ul>
      <% encode_job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
  <%= f.label :title%>
  <%= f.text_field :title, class: "form-control"  %>
    </div>
    <%=f.fields_for :params do |s| %>
    <div class="form-group">
  <%= s.label :Video_Encoder %>
  <%= s.select :vencoder, options_for_select_vencoder, {}, prompt: 'Select One', class: "form-control" %>
  <%#= f.text_area :params, class: "form-control" %>
    </div>
    
    <div class="form-group">
  <%= s.label :preset %>
  <%= s.select :preset, options_for_select_preset, {}, prompt: 'Select One', class: "form-control" %>
  <%#= select_tag(:preset, options_for_select, class: "form-control") %>
    </div>
    
    <div class="form-group">
  <%= s.label :tune %>
  <%= s.select :tune, options_for_select_tune, {}, prompt: 'Select One', class: "form-control" %>
  <%#= select_tag(:tune, options_for_select_tune(), class: "form-control") %>
    </div>
    
    <div class="form-group">
  <%= s.label :CRF%>
  <%= s.number_field(:abr, :value=> 20, class: "form-control") %>
  <%#= text_field_tag(:crf, '128k', class: "form-control") %>
    </div>
    
    <div class="form-group">
  <%= s.label :Audio_Encoder %>
  <%= s.select :aencoder, options_for_select_preset, {}, prompt: 'Select One', class: "form-control" %>
  <%#= f.text_area :params, class: "form-control" %>
    </div>
    
    <div class="form-group">
  <%= s.label :audio_bitrate%>
  <%= s.text_field(:crf, :value=> '128k', class:"form-control")%>
  
    </div>
  <% end%>  
  
    
  <!--<div class="col-md-12"-->
    <div class="col-md-5">
    	<div class="form-group">
    		<label for="upload">Upload File</label>
    		<div class="input-group">
    			<label class="input-group-btn">
    			<span class="btn btn-primary">
    			Browse&hellip; <%= f.file_field :upload, style: "display:none;"%> 
    			</span>
    			</label>
    			<%= text_field_tag(:ulname, nil, class: "form-control", :readonly => true) %>
    			<!--<input type="text" id="ulname" class="form-control" readonly>-->
    		</div>
    	</div>
    </div>
    <div class="col-md-2">
    	<h1 class='text-center'>OR</h1>
    </div>
    <div class="col-md-5">
    	<div class="form-group">
    		<%= f.label :url%>
    		<%= text_field_tag('encode_job[url]', nil, class: "form-control")  %>
    	</div>
    </div>
  
            
    <%= #f.file_field :picture
    %>
    
  <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
    <% end %>